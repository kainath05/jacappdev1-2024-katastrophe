<Window x:Class="Calendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar"
        mc:Ignorable="d"
        Title="Choose Calendar" Height="270" Width="325">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock FontSize="15" FontWeight="Bold" Margin="67, 2, 2, 4">CALENDAR SET UP</TextBlock>
            <TextBlock Text="Calendar File Name:"/>
            <TextBox x:Name="FileNameTextBox" Margin="0,5"/>

            <TextBlock Text="Folder Location:"/>
            <ComboBox x:Name="FolderComboBox" Margin="0,5"/>

            <Button Content="Open File Explorer" Click="OpenFileExplorer_Click" Margin="0,10"/>
            <Button Click="Button_Click">Done</Button>
        </StackPanel>

        <Button Content="X" Click="ExitButton_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
    </Grid>
</Window>
