<Window x:Class="Calendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar"
        mc:Ignorable="d"
        Title="Choose Calendar" Height="350" Width="525">
    <Grid>
        <!-- Main content area -->
        <StackPanel Margin="20">
            <!-- File Name Input -->
            <TextBlock Text="Calendar File Name:"/>
            <TextBox x:Name="FileNameTextBox" Margin="0,5"/>

            <!-- Folder Location Selection -->
            <TextBlock Text="Folder Location:"/>
            <ComboBox x:Name="FolderComboBox" Margin="0,5"/>

            <!-- Button to Open File Explorer -->
            <Button Content="Open File Explorer" Click="OpenFileExplorer_Click" Margin="0,10"/>
            <Button>Done</Button>
        </StackPanel>

        <!-- Exit button positioned in top right corner -->
        <Button Content="X" Click="ExitButton_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
    </Grid>
</Window>
